{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "dist", 
    "rootDir": "src", 
    "noEmit": false 
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "global.d.ts"],
  "exclude": ["node_modules", "dist"] 
}
